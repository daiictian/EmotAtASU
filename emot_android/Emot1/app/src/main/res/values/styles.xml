<?xml version="1.0" encoding="utf-8"?>
<resources>

<!--     the unprefixed ones (without android:) are for the Sherlock implementation -->

    <style name="RosterGroupName">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
	<item name="android:paddingTop">2dp</item>
	<item name="android:paddingBottom">2dp</item>
    </style>

    <style name="RosterGroupName.Dark">
        <item name="android:background">@drawable/group_background_9_dark</item>
    </style>

    <style name="RosterGroupName.Light">
        <item name="android:background">@drawable/group_background_9_light</item>
    </style>

    <style name="RosterGroupItem">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="RosterGroupItem.Light">
	<item name="android:textColor">#000000</item>
    </style>

	<style name="StyleErrorView">
		<item name="android:textSize">18sp</item>
		<item name="android:padding">5sp</item>
		<item name="android:textColor">#000</item>
		<item name="android:background">#b44</item>
		<item name="android:shadowColor">#44000000</item>
		<item name="android:shadowRadius">3.0</item>
	</style>
	<style name="StyleErrorView.Light">
		<item name="android:background">#f88</item>
		<item name="android:textColor">#400</item>
	</style>

    <style name="ChatText">
	<item name="android:textSize">18sp</item>
    </style>
    <style name="ChatText.Light">
	<item name="android:textColor">#000000</item>
    </style>
    
    <style name="btnStyleOrange" parent="@android:style/Widget.Button">
       <item name="android:textSize">15sp</item>
       <item name="android:textStyle">bold</item>
       <item name="android:textColor">#FFFFFF</item>
       <item name="android:gravity">center</item>
       <item name="android:shadowColor">#000000</item>
       <item name="android:shadowDx">1</item>
       <item name="android:shadowDy">1</item>
       <item name="android:shadowRadius">0.6</item>
       <item name="android:background">@drawable/btn_black</item>
       <item name="android:padding">10dip</item>
   </style>
   
    <style name="btnStyleLastChat" parent="@android:style/Widget.TextView">
       <item name="android:textSize">15sp</item>
       <item name="android:textStyle">bold</item>
       <item name="android:textColor">#FFFFFF</item>
       <item name="android:gravity">center</item>
       <item name="android:shadowColor">#000000</item>
       <item name="android:shadowDx">1</item>
       <item name="android:shadowDy">1</item>
       <item name="android:shadowRadius">0.6</item>
       <item name="android:background">@drawable/gradient_last_chat</item>
       <item name="android:padding">10dip</item>
   </style>

</resources>
